    mixin block(title, cssClass)
      section.block
        .wrap: h6.block__header
          span.heading #{title}
          if cssClass
            span.code: code #{cssClass}
        .block__body
          block

    mixin variables
      .block__variables: .wrap
        block

    mixin example(title, cssClass, dontWrap)
      if title
        .block__variant
          .variant
            .wrap: .variant__header
              span.heading #{title}
              if cssClass
                span.code: code #{cssClass}
            .variant__body
              div(class=(dontWrap ? '' : 'wrap'))
                block
      else
        .block__example
          div(class=(dontWrap ? '' : 'wrap'))
            block

    .hero
      .wrap
